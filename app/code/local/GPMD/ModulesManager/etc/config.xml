<config>
    <modules>
        <GPMD_ModulesManager>
            <version>1.1.0</version>
        </GPMD_ModulesManager>
    </modules>
    <admin>
        <routers>
            <modulesmanager>
                <use>admin</use>
                <args>
                    <module>GPMD_ModulesManager</module>
                    <frontName>modulesmanager</frontName>
                </args>
            </modulesmanager>
            <adminhtml>
                <use>admin</use>
                <args>
                    <modules>
                        <GPMD_ModulesManager_Adminhtml before="Mage_Adminhtml">GPMD_ModulesManager_Adminhtml</GPMD_ModulesManager_Adminhtml>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <modulesmanager>
                                            <title>GPMD Module Manager</title>
                                            <sort_order>100</sort_order>
                                        </modulesmanager>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <modulesmanager>
                    <file>modulesmanager/modulesmanager.xml</file>
                </modulesmanager>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <helpers>
            <modulesmanager>
                <class>GPMD_ModulesManager_Helper</class>
            </modulesmanager>
        </helpers>
        <blocks>
            <modulesmanager>
                <class>GPMD_ModulesManager_Block</class>
            </modulesmanager>
        </blocks>
        <models>
            <modulesmanager>
                <class>GPMD_ModulesManager_Model</class>
            </modulesmanager>
        </models>
    </global>
</config>

